<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groups -->
    <record id="group_legal_user" model="res.groups">
        <field name="name">Legal / User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_legal_manager" model="res.groups">
        <field name="name">Legal Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_legal_user'))]"/>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Record rule: Legal Users may only see cases where they are responsible or member -->
    <record id="rule_legal_user_case" model="ir.rule">
        <field name="name">Legal: user sees own cases</field>
        <field name="model_id" ref="model_legal_case"/>
        <field name="domain_force">['|',('responsible_lawyer_id.user_id','=',user.id),('member_ids','in',[user.id])]</field>
        <field name="groups" eval="[(4, ref('group_legal_user'))]"/>
    </record>
</odoo>
